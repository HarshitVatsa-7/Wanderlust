    <% layout("layouts/boilerplate") %>

<style>
    #filters {
        display: flex;
        flex-wrap: wrap;
        align-items: center;
    }

    .filter {
        text-align: center;
        margin-right: 2rem;
        margin-top: 2rem;
        opacity: 0.7;
        text-decoration: none;
        color: inherit;
    }

    .filter:hover {
        opacity: 1;
        cursor: pointer;
    }

    .filter p {
        font-size: 0.8rem;
    }


    .active-filter {
    border-bottom: 2px solid #000;
    font-weight: bold;
    opacity: 1;
    }

    .filter:link,
    .filter:visited,
    .filter:hover,
    .filter:active {
        text-decoration: none;
        color: inherit;
    }

    .tax-info {
        display: none;
    }

    .tax-toggle {
        border: 1px solid black;
        border-radius: 1rem;
        height: 3.25rem;
        padding: 1rem;
        margin-left: 6rem;
        display: flex;
        align-items: center;
    }

    /* Horizontal scroll wrapper for mobile */
.filter-scroll-wrapper {
    overflow-x: auto;
    -webkit-overflow-scrolling: touch;
    width: 100%;
    scrollbar-width: none;         /* Firefox */
    -ms-overflow-style: none;
}

.filter-scroll-wrapper::-webkit-scrollbar {
  display: none;                 /* Chrome, Safari, Opera */
}

/* Enable horizontal scroll on smaller screens */
@media (max-width: 768px) {
    #filters {
        flex-wrap: nowrap;
        width: max-content;
        padding: 1rem;
    }

    .filter {
        flex: 0 0 auto;
        margin-right: 1rem;
        margin-top: 0.5rem;
    }

    .tax-toggle {
        margin-left: 1rem;
        flex: 0 0 auto;
    }
}

</style>

<div class="filter-scroll-wrapper">
    <div id="filters">
    <a href="/listings?category=Trending" class="filter <%= category === 'Trending' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-fire"></i></div>
        <p>Trending</p>
    </a>
    <a href="/listings?category=Rooms" class="filter <%= category === 'Rooms' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-bed"></i></div>
        <p>Rooms</p>
    </a>
    <a href="/listings?category=Iconic Cities" class="filter <%= category === 'Iconic Cities' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-mountain-city"></i></div>
        <p>Iconic Cities</p>
    </a>
    <a href="/listings?category=Mountains" class="filter <%= category === 'Mountains' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-mountain-sun"></i></div>
        <p>Mountains</p>
    </a>
    <a href="/listings?category=Castles" class="filter <%= category === 'Castles' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-chess-rook"></i></div>
        <p>Castles</p>
    </a>
    <a href="/listings?category=Amazing Pools" class="filter <%= category === 'Amazing Pools' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-person-swimming"></i></div>
        <p>Amazing Pools</p>
    </a>
    <a href="/listings?category=Camping" class="filter <%= category === 'Camping' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-tents"></i></div>
        <p>Camping</p>
    </a>
    <a href="/listings?category=Farms" class="filter <%= category === 'Farms' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-cow"></i></div>
        <p>Farms</p>
    </a>
    <a href="/listings?category=Arctics" class="filter <%= category === 'Arctics' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-snowflake"></i></div>
        <p>Arctics</p>
    </a>
    <a href="/listings?category=Temples" class="filter <%= category === 'Temples' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-gopuram"></i></div>
        <p>Temples</p>
    </a>
    <a href="/listings?category=Beaches" class="filter <%= category === 'Beaches' ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-umbrella-beach"></i></div>
        <p>Beaches</p>
    </a>
    <a href="/listings" class="filter <%= !category ? 'active-filter' : '' %>">
        <div><i class="fa-solid fa-list"></i></div>
        <p>All</p>
    </a>

    <div class="tax-toggle">
    <div class="form-check-reverse form-switch">
        <input class="form-check-input" type="checkbox" role="switch" id="switchCheckDefault">
        <label class="form-check-label" for="switchCheckDefault">Display total after taxes</label>
    </div>
</div>
</div>
</div>

<div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1 mt-3">
    <% for (let listing of allListings) { %>
        <a href="/listings/<%= listing._id %>" class="listing-link">
            <div class="card col listing-card">
                <img
                    class="card-img-top"
                    src="<%= listing.image?.url || 'https://res.cloudinary.com/dbzodwl9t/image/upload/v1752858300/wanderlust_DEV/ujh4xqcatyeure9rlsbw.jpg' %>"
                    alt="listing_image"
                    style="height: 20rem;"
                />
                <div class="card-img-overlay"></div>
                <div class="card-body">
                    <p class="card-text">
                        <b><%= listing.title %></b><br>
                        &#8377; <%= listing.price ? listing.price.toLocaleString("en-IN") : "N/A" %> / night
                        <i class="tax-info"> &nbsp; +18% GST</i>
                        <br><small class="text-muted">Category: <%= listing.category %></small>
                    </p>
                </div>
            </div>
        </a>
    <% } %>
</div>

<script>
    let taxSwitch = document.getElementById("switchCheckDefault");
    taxSwitch.addEventListener("click", () => {
        let taxInfo = document.getElementsByClassName("tax-info");
        for(info of taxInfo) {
            if(info.style.display != "inline") {
                info.style.display = "inline";
            } else {
                info.style.display = "none";
            }
        }
    });
</script>
</div>